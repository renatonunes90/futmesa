<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:c="urn:import:com.google.gwt.user.cellview.client">

  <ui:with field="consts" type="com.futmesa.client.module.main.viewport.player.PlayerViewportConsts" /> 
  	
  <ui:style src="playerviewport.css" /> 

  <g:VerticalPanel ui:field='panel'>
    <g:HorizontalPanel ui:field='titleHeader'>
     	<g:Label ui:field='playerLabel' addStyleNames='{style.playerTitle}' text=''></g:Label>
     </g:HorizontalPanel>
     <g:TabLayoutPanel ui:field='tabPanel' addStyleNames='{style.customTabPanel}' barHeight='50' barUnit='PX'  animationDuration='500'>
		<g:tab>
        	<g:customHeader>
        		<g:Label text='{consts.mainTabLabel}' addStyleNames='{style.customTabHeader}'></g:Label>
        	</g:customHeader>
        	<g:HorizontalPanel ui:field='mainTabPanel' height='100%'></g:HorizontalPanel>
   		</g:tab>
	    <g:tab>
		   <g:customHeader>
        		<g:Label text='{consts.seasonTabLabel}' addStyleNames='{style.customTabHeader}'></g:Label>
        	</g:customHeader>
	        <g:HorizontalPanel ui:field='seasonsTabPanel' height='100%'></g:HorizontalPanel>
	    </g:tab>
	    <g:tab>
	    	<g:customHeader>
        		<g:Label text='{consts.historicTabLabel}' addStyleNames='{style.customTabHeader}'></g:Label>
        	</g:customHeader>
	        <g:HorizontalPanel ui:field='historicTabPanel' height='100%'></g:HorizontalPanel>
	   </g:tab>
     </g:TabLayoutPanel>
  </g:VerticalPanel>
</ui:UiBinder>