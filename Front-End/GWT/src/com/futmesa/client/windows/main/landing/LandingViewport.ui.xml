<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
   xmlns:ui="urn:ui:com.google.gwt.uibinder"
   xmlns:g="urn:import:com.google.gwt.user.client.ui">

   <ui:with field="consts" type="com.futmesa.client.windows.main.landing.LandingViewportConsts" /> 
  	
   <ui:style src="landingviewport.css" /> 

	<g:VerticalPanel ui:field='panel' addStyleNames='{style.landingPanel}'>
		<g:Label addStyleNames='{style.welcomeTitle}' text='{consts.welcomeTitle}'></g:Label>
		<g:FocusPanel ui:field="shortcutBtn" styleName="{style.shortcutBtn}"></g:FocusPanel>
		<g:Label ui:field="helpText" addStyleNames='{style.helpText}' text='{consts.helpText}'></g:Label>
	</g:VerticalPanel>
</ui:UiBinder>