<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" >

 	<ui:style src="baseviewport.css" /> 
	
  	<ui:with field="consts" type="com.futmesa.client.FutMesaConsts" /> 
  
    <g:DockLayoutPanel styleName="{style.dock-layout}" unit='EM' height="100%" ui:field='vLayout'>
        <g:north size='7'>
            <g:HorizontalPanel addStyleNames="{style.header-panel} {style.gradient-bar}">
               <g:HorizontalPanel addStyleNames="{style.header-left-panel}">
               		<g:MenuBar ui:field="menuBar" styleName="{style.custom-btn} {style.custom-menu-bar}"></g:MenuBar>
               		<g:FocusPanel ui:field="homeShortcut" styleName="{style.app-title}">
               		    <g:Label text='{consts.appName}'></g:Label>
               		</g:FocusPanel>
               </g:HorizontalPanel>
               <g:Label ui:field='championshipLabel' addStyleNames='{style.page-title}'></g:Label>
               <g:HorizontalPanel addStyleNames="{style.header-right-panel}">
                     <g:FocusPanel ui:field="helpButton" styleName="{style.custom-btn} {style.custom-help-button}"></g:FocusPanel>
               </g:HorizontalPanel>
            </g:HorizontalPanel>
        </g:north>
        <g:center>
            <g:SimplePanel styleName="{style.center-container}">
	            <g:HorizontalPanel styleName="{style.main-panel}" ui:field='mainPanel' horizontalAlignment="center"></g:HorizontalPanel>
            </g:SimplePanel>
        </g:center>     
     </g:DockLayoutPanel>
    
</ui:UiBinder> 