<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui" >

 	<ui:style src="baseviewport.css" /> 
	
  	<ui:with field="consts" type="com.futmesa.client.FutMesaConsts" /> 
  
    <b:FluidContainer styleName="{style.root-container}" ui:field='vLayout'>
	  	<b:FluidRow height="56px" addStyleNames="{style.header-panel} {style.gradient-bar}">
			<b:Column size="2">
				<b:Row>
					<b:Column size="4">
		   				<g:MenuBar ui:field="menuBar" styleName="{style.custom-btn} {style.custom-menu-bar}"></g:MenuBar>
					</b:Column>   		
			   		<b:Column size="8">
		    			<g:FocusPanel ui:field="homeShortcut" styleName="{style.app-title}">
		  		   			<g:Label text='{consts.appName}'></g:Label>
		    			</g:FocusPanel>
	   				</b:Column>
				</b:Row>
			</b:Column>
			<b:Column size="8">
            	<g:Label ui:field='championshipLabel' addStyleNames='{style.page-title}'></g:Label>
			</b:Column>
			<b:Column size="2">
           		<g:FocusPanel ui:field="helpButton" styleName="{style.custom-btn} {style.custom-help-button}"></g:FocusPanel>
			</b:Column>
	  	</b:FluidRow>
	    
	    <b:FluidRow styleName="{style.center-container}" >
            <b:FluidContainer styleName="{style.main-panel}" ui:field='mainPanel'></b:FluidContainer>
	  	</b:FluidRow>
  	</b:FluidContainer>
    
</ui:UiBinder> 