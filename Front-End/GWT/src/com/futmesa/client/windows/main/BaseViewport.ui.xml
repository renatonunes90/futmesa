<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui" >

 	<ui:style src="baseviewport.css" /> 
	
  	<ui:with field="consts" type="com.futmesa.client.windows.main.BaseViewportConsts" /> 
  
    <g:DockLayoutPanel styleName="{style.dockLayout}" unit='EM' height="100%" ui:field='vLayout'>
        <g:north size='7'>
            <g:HorizontalPanel addStyleNames="{style.headerPanel} {style.gradientBar}">
               <g:HorizontalPanel addStyleNames="{style.headerLeftPanel}">
               		<g:MenuBar ui:field="menuBar" styleName="{style.customBtn} {style.customMenuBar}"></g:MenuBar>
               		<g:FocusPanel ui:field="homeShortcut" styleName="{style.appTitle}">
               		    <g:Label text='{consts.pageTitle}'></g:Label>
               		</g:FocusPanel>
               </g:HorizontalPanel>
               <g:Label ui:field='championshipLabel' addStyleNames='{style.pageTitle}'></g:Label>
               <g:HorizontalPanel addStyleNames="{style.headerRightPanel}">
                     <g:FocusPanel ui:field="helpButton" styleName="{style.customBtn} {style.customHelpButton}"></g:FocusPanel>
               </g:HorizontalPanel>
            </g:HorizontalPanel>
        </g:north>
        <g:center>
            <g:SimplePanel styleName="{style.centerContainer}">
	            <g:HorizontalPanel styleName="{style.mainPanel}" ui:field='mainPanel' horizontalAlignment="center"></g:HorizontalPanel>
            </g:SimplePanel>
        </g:center>     
     </g:DockLayoutPanel>
    
</ui:UiBinder> 